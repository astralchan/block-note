{
  "manifest_version": 2,
  "name": "Block Note",
  "version": "0.0.0",

  "description": "Block people across websites",

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": ["dist/index.js"]
    }
  ]
}
